// 单行不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 多行不换行 webkit浏览器
no-wraps()
  text-overflow: ellipsis
  overflow: hidden
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: 2

// 清除浮动
clear-float()
  zoom: 1
  &:after
    content: '.'
    display: block
    clear: both
    height: 0
    visibility: hidden

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -15px
    left: -15px
    right: -15px
    bottom: -15px
	
    