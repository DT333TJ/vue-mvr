@import './variable'

/* 分页上下页按钮样式 */
.el-pagination .btn-prev , .el-pagination .btn-next
  &:hover
    color $color-text-sub
  &:hover span
    color $color-text-sub     

/* 不可点击按钮样式 */
.el-pagination button.disabled
  color #c0c4cc
  &:hover
    color #c0c4cc
  &:hover span
    color #c0c4cc

/* 页码样式*/  
.el-pager li
  color #606266

.el-pager li.active
  color $color-text-sub
  &:hover
    color $color-text-sub

.el-pager li:hover
  color $color-text-sub 

/* 步骤条 */   
.el-step__head.is-finish
  color $color-text-sub
  border-color $color-text-sub 

.el-step__title.is-finish
  color $color-text-sub

/* 对话框的按钮 */   
.el-button--primary:focus, .el-button--primary:hover, .el-button--primary:active
  background-color $color-text-sub
  border-color $color-text-sub

/* 单选框样式 */
.el-radio__inner:hover
  border-color $color-text-sub 
    
.el-radio__input.is-checked+.el-radio__label 
  color $color-text-sub

.el-radio__input.is-checked .el-radio__inner , .el-radio__input.is-checked .el-radio__inner , .el-radio__input.is-checked .el-radio__inner
  background $color-text-sub
  color $color-text-sub
  border-color $color-text-sub   